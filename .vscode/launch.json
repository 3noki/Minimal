{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Node",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js"
        },
        {
            "name": "Go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/app.go"
        },
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/app.py",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}