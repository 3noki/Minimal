{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "node",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/app.go",
            "env": {
                "GO_ENV": "development"
            }
        },
        {
            "name": "python",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/app.py",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "env": {
                "PYTHON_ENV": "development"
            }
        }
    ]
}